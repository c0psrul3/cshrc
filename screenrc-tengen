escape ^Bb # Instead of Control-a, make the escape/command character be Control-b

autodetach on # Autodetach session on hangup instead of terminating screen completely

startup_message off # Turn off the splash screen

defscrollback 30000 # Use a 30000-line scrollback buffer

termcapinfo xterm ti@:te@
termcapinfo rxvt  ti@:te@

shell -tcsh

vbell off

bind ^S xon
bind s xon

caption always "%{= kw} %-w%{= bW}%n%t%{-}%+w %-= %u@%H | %Y-%m-%d | %LD | %c %A "

## Default screens
screen -t -cads_reports 0 ssh -t tengen "cd `cat /home/casey/.aliastmp/curdircads_reports`; tcsh"
screen -t -js 1 ssh -t tengen "cd `cat /home/casey/.aliastmp/curdirjs`; tcsh"
screen -t -js 2 ssh -t tengen "cd `cat /home/casey/.aliastmp/curdirjs`; tcsh"
screen -t -Controller 3 ssh -t tengen "cd `cat /home/casey/.aliastmp/curdirController`; tcsh"
screen -t -Model 4 ssh -t tengen "cd `cat /home/casey/.aliastmp/curdirModel`; tcsh"
screen -t -View 5 ssh -t tengen "cd `cat /home/casey/.aliastmp/curdirView`; tcsh"
screen -t -css 6 ssh -t tengen "cd `cat /home/casey/.aliastmp/curdircss`; tcsh"
screen -t -mysql 7 ssh -t tengen "tcsh"


